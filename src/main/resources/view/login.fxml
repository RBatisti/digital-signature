<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane style="-fx-background-color: #221d21;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.Login">
   <center>
      <VBox alignment="TOP_CENTER" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="TOP_LEFT">
               <children>
                  <Button onAction="#goToMain" style="-fx-background-color: transparent; -fx-text-fill: #b7aea5; -fx-font-size: 13px; -fx-underline: true; -fx-cursor: hand;" text="â€¹ Voltar ao Menu" />
               </children>
               <padding>
                  <Insets left="15.0" top="15.0" />
               </padding>
            </HBox>
            <Label text="Login in your account" textFill="#f77014">
               <font>
                  <Font name="Segoe UI" size="40.0" />
               </font>
               <VBox.margin>
                  <Insets top="60.0" />
               </VBox.margin>
            </Label>
            <VBox alignment="CENTER_LEFT" maxWidth="280.0" spacing="5.0">
               <children>
                  <Label text="CPF" textFill="#b7aea5">
                     <font>
                        <Font name="Tahoma" size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="fieldCpf" promptText="Enter your CPF" style="-fx-background-color: #433d3d; -fx-text-fill: white; -fx-prompt-text-fill: #b7aea5; -fx-background-radius: 8px; -fx-padding: 10px;" />
               </children>
               <VBox.margin>
                  <Insets top="60.0" />
               </VBox.margin>
            </VBox>
            <VBox alignment="CENTER_LEFT" maxWidth="280.0" spacing="5.0">
               <children>
                  <Label text="Password" textFill="#b7aea5">
                     <font>
                        <Font name="Tahoma" size="14.0" />
                     </font>
                  </Label>
                  <PasswordField fx:id="fieldPassword" promptText="Enter your password" style="-fx-background-color: #433d3d; -fx-text-fill: white; -fx-prompt-text-fill: #b7aea5; -fx-background-radius: 8px; -fx-padding: 10px;" />
               </children>
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
            </VBox>
            <Button onAction="#login" style="-fx-background-color: linear-gradient(to right, #f77014, #e33c08); -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 8px; -fx-padding: 12px 30px; -fx-cursor: hand;" text="Login">
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
            </Button>
            <HBox alignment="CENTER" spacing="5.0">
               <children>
                  <Label text="New?" textFill="#b7aea5">
                     <font>
                        <Font name="Tahoma" size="13.0" />
                     </font>
                  </Label>
                  <Button onAction="#goToCreate" style="-fx-background-color: transparent; -fx-text-fill: #f77014; -fx-font-size: 13px; -fx-underline: true; -fx-cursor: hand;" text="Create an account" />
               </children>
               <VBox.margin>
                  <Insets top="80.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>