<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane style="-fx-background-color: #221d21;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CreateUser">
   <center>
      <VBox alignment="TOP_CENTER" style="-fx-background-color: #221d21;" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="TOP_LEFT">
               <children>
                  <Button onAction="#goToMain" style="-fx-background-color: transparent; -fx-text-fill: #b7aea5; -fx-font-size: 13px; -fx-underline: true; -fx-cursor: hand;" text="â€¹ Voltar ao Menu" />
               </children>
               <padding>
                  <Insets left="15.0" top="15.0" />
               </padding>
            </HBox>
            <Label style="-fx-text-fill: #f77014" text="Create your user">
               <font>
                  <Font name="Segoe UI" size="40.0" />
               </font>
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
            </Label>
            <VBox alignment="CENTER" spacing="8.0">
               <children>
                  <Label style="-fx-text-fill: #b7aea5; -fx-font-size: 14px; -fx-font-weight: bold;" text="Name" />
                  <TextField fx:id="fieldName" maxWidth="280.0" prefWidth="280.0" promptText="Enter your name" style="-fx-background-color: #433d3d; -fx-text-fill: #b7aea5; -fx-prompt-text-fill: #b7aea5; -fx-background-radius: 8px; -fx-padding: 10px;" />
               </children>
               <VBox.margin>
                  <Insets top="40.0" />
               </VBox.margin>
            </VBox>
            <VBox alignment="CENTER" spacing="8.0">
               <children>
                  <Label style="-fx-text-fill: #b7aea5; -fx-font-size: 14px; -fx-font-weight: bold;" text="CPF" />
                  <TextField fx:id="fieldCpf" maxWidth="280.0" prefWidth="280.0" promptText="Enter your CPF" style="-fx-background-color: #433d3d; -fx-text-fill: #b7aea5; -fx-prompt-text-fill: #b7aea5; -fx-background-radius: 8px; -fx-padding: 10px;" />
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </VBox>
            <VBox alignment="CENTER" spacing="8.0">
               <children>
                  <Label style="-fx-text-fill: #b7aea5; -fx-font-size: 14px; -fx-font-weight: bold;" text="Password" />
                  <PasswordField fx:id="fieldPassword1" maxWidth="280.0" prefWidth="280.0" promptText="Enter your password" style="-fx-background-color: #433d3d; -fx-text-fill: #b7aea5; -fx-prompt-text-fill: #b7aea5; -fx-background-radius: 8px; -fx-padding: 10px;" />
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </VBox>
            <VBox alignment="CENTER" spacing="8.0">
               <children>
                  <Label style="-fx-text-fill: #b7aea5; -fx-font-size: 14px; -fx-font-weight: bold;" text="Repeat password" />
                  <PasswordField fx:id="fieldPassword2" maxWidth="280.0" prefWidth="280.0" promptText="Repeat your password" style="-fx-background-color: #433d3d; -fx-text-fill: #b7aea5; -fx-prompt-text-fill: #b7aea5; -fx-background-radius: 8px; -fx-padding: 10px;" />
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </VBox>
            <Button onAction="#create" style="-fx-background-color: linear-gradient(to right, #f77014, #e33c08); -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 8px; -fx-padding: 12px 30px; -fx-cursor: hand;" text="Create">
               <VBox.margin>
                  <Insets top="25.0" />
               </VBox.margin>
            </Button>
            <HBox alignment="CENTER" spacing="5.0">
               <children>
                  <Label style="-fx-text-fill: #b7aea5; -fx-font-size: 13px;" text="Already have an account?" />
                  <Button onAction="#goToLogin" style="-fx-background-color: transparent; -fx-text-fill: #f77014; -fx-font-size: 13px; -fx-underline: true; -fx-cursor: hand;" text="Login" />
               </children>
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>